@model AppMVC.Models.LoginInfo
@{
    ViewBag.Title = "Idenitifique-se";
}

<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>Login</legend>
        <br>
        @Html.LabelFor(model => model.Login)
        @Html.TextBoxFor(model => model.Login, new { size = 30 })
        @Html.ValidationMessageFor(model => model.Login)
        <br>
        @Html.LabelFor(model => model.Senha)
        @Html.PasswordFor(model => model.Senha, new { size = 30 })
        @Html.ValidationMessageFor(model => model.Senha)

        <br>
        <br>

        <input type="submit" value="Login"  />

    </fieldset>
}

